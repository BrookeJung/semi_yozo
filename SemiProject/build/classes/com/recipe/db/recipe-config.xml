<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<properties resource="com/recipe/db/db.properties"></properties>
	<typeAliases>
		<typeAlias type="com.recipe_material.dto.recipe_materialDto"
			alias="recipe_materialDto" />
		<typeAlias type="com.recipe_info.dto.recipe_InfoDto" 
		alias="recipe_InfoDto"/>
		
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>

		<mapper resource="com/recipe/db/recipe-mapper.xml" />
	</mappers>

</configuration>